<main class="container">
  <div class="admin" style="padding:24px;align-items: center;">
  <div class="__title">
  <h1>Listado de categorías</h1>
</div>
  <a class="a__boton" href="/admin/categorias/create">Crear</a>

  <table class="__tables">
    <thead>
      <tr>
        <th>#</th>
        <th>Nombre</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% categorias.forEach(categoria => { %>
      <tr>
        <td><%= categoria.id %></td>
        <td><%= categoria.nombre %></td>
        <td>
          <a class="a__boton" href="/admin/categorias/<%= categoria.id %>/edit">Editar</a>
          |
          <form
            class="form-delete"
            style="display: inline-block"
            action="/admin/categorias/<%= categoria.id %>?_method=DELETE"
            method="post"
          >
            <button class="a__boton" type="submit">Borrar</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  </div>
</main>
<script>
  document.addEventListener("submit", (event) => {
    if (event.target.classList.contains("form-delete")) {
      event.preventDefault();

      if (confirm("¿Esta seguro?")) {
        event.target.submit();
      }
    }
  });
</script>