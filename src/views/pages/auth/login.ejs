<main class="container">
  <div class="admin" style="padding:24px;align-items: center;">
  <div class="__title">
    <h1>INGRESAR A MI CUENTA</h1>
  </div>
  <% if (typeof errors != 'undefined') { %>
  <ul>
    <% errors.forEach(error => { %>
    <li  style="color:red; font-weight: bold;"><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>

  <form 
    action="/auth/login"
    method="post"
    class="__form"
  >
    <div>
      <label for="email">EMAIL:</label>
      <input
        type="email"
        id="email"
        name="email"
        value="<%= typeof values != 'undefined' ? values.email : '' %>"
        placeholder="a@a.com"
      />
    </div>
    <div>
    <label for="password">CONTRASEÃ‘A:</label>
      <input 
        type="password"
        id="password"
        name="password"
        placeholder="********"  
      />
    </div>
    <button type="submit">Enviar</button>
  </form>
</main>
